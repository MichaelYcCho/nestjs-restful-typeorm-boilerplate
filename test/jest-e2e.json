{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/../src/$1",
        "^@auth/(.*)$": "<rootDir>/../src/auth/$1",
        "^@config/(.*)$": "<rootDir>/../src/config/$1",
        "^@core/(.*)$": "<rootDir>/../src/core/$1",
        "^@users/(.*)$": "<rootDir>/../src/users/$1"
    }
}
